BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: miles_input
            on_text: app.handle_calculation()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculation()
    Label:
        text: app.converted_distance
        color: (1, 1, 0, 1)